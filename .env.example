# --- Telegram (obligatorio) ---
BOT_TOKEN="123456789:AAExampleTokenReplaceMe"
CHAT_ID="123456789"

# --- Identidad ---
SERVER_LABEL=""            # default: hostname
DOCKER_EMOJI="true"        # true/false
ALERTS_ONLY="false"        # true => enviar solo si hay WARN/CRIT

# --- Comportamiento ---
RESTART_ON_STOP="false"    # si true, reinicia contenedores STOPPED/EXITED (NO reinicia UNHEALTHY)
RESTART_COOLDOWN_SEC="600" # anti-loop por contenedor

# --- Anti-duplicados ---
LOCK_TTL_SEC="300"
DOCKER_WATCH_RUNDIR="/run/docker-watch"

# --- Filtros ---
IGNORE_CONTAINERS=""       # lista separada por coma (names o ids) a ignorar
ONLY_THIS_COMPOSE=""       # opcional: filtra por label com.docker.compose.project=<name>

# --- Salud ---
WARN_UNHEALTHY="true"      # notifica unhealthy
WARN_RESTARTING="true"     # notifica restarting
WARN_DEAD="true"           # notifica dead

# --- Networking (para Telegram) ---
NET_CHECK_IP="1.1.1.1"
NET_CHECK_DNS="api.telegram.org"
